{% set opSecretPath = "op://homelab kubernetes/talos" %}
---
machine:
  install:
    diskSelector:
      serial: S5H7NC0MC01039A
  network:
    hostname: cp01.k8s.batcave
    interfaces:
      - interface: bond0
        bond:
          deviceSelectors:
            - hardwareAddr: "54:b2:03:98:84:*"
              driver: e1000e
          mode: 802.3ad
          xmitHashPolicy: layer3+4
          lacpRate: fast
          miimon: 1000
        dhcp: true
        mtu: 1500
        vip:
          ip: 10.40.1.250
        vlans:
          - vlanId: 20
            dhcp: false
            mtu: 1500
            dhcpOptions:
              routeMetric: 4096
          - vlanId: 50
            dhcp: false
            mtu: 1500
            dhcpOptions:
              routeMetric: 4096
